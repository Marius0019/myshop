{% extends "base.html.twig" %}

{% block title %}Gestion des produits{% endblock %}

{% block body %}

<div class="container my-3 p-4 w-80 border border-primary" >
<h1 class="text-center my-4 p-4 bg-secondary">RÃ©capitulatif stock de t-shirt</h1>

    <div class="container mt-5 ">
        <table class="table table-warning table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Couleur</th>
                    <th>Taille</th>
                    <th>Collection</th>
                    <th>Photo</th>
                    <th>Prix</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produit %}
                    
                    <tr>
                        <td>{{ produit.id }}</td>
                        <td>{{ produit.titre }}</td>
                        <td>{{ produit.description|slice(0, 100)}}</td>
                        <td>{{ produit.couleur }}</td>
                        <td>{{ produit.taille }}</td>
                        <td>{{ produit.collection }}</td>
                        <td><img class="img-fluid" src="{{ asset('img/upload/' ~ produit.photo) }}" alt=""></td>
                        <td>{{ produit.prix }}</td>
                        <td>{{ produit.stock }}</td>
                        <td>
                            <a href="{{ path('main_show', {id: produit.id} ) }}" class=""><i class="bi bi-search"></i></a>
                            <a href="{{ path('main_gestion', {id: produit.id} )}}" class=""><i class="bi bi-pencil-square"></i></a>
                            <a href="{{ path('main_supprimer', {id: produit.id} )}}" class=""><i class="bi bi-trash3-fill"></i></a>
                        </td>
                    </tr>
                    
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}



